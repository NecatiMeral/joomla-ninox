<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
	<name>COM_NINOX</name>
	<author>Necati Meral</author>
	<authorEmail>necati_meral@yahoo.de</authorEmail>
	<creationDate>June 2021</creationDate>
	<copyright>Copyright (C) 2021 Necati Meral</copyright>
	<license>MIT License</license>
	<authorUrl>https://github.com/NecatiMeral/joomla-ninox</authorUrl>
	<version>1.0</version>
	<description>COM_NINOX_DESC</description>

	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<administration>
		<menu view="configuration">COM_NINOX</menu>
		<files folder="admin">
			<filename>index.html</filename>
			<filename>controller.php</filename>
			<filename>ninox.php</filename>
			<folder>assets</folder> 
			<folder>helpers</folder> 
			<folder>models</folder> 
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder> 
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_ninox.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_ninox.sys.ini</language>
			<language tag="de-DE">language/de-DE/de-DE.com_ninox.ini</language>
			<language tag="de-DE">language/de-DE/de-DE.com_ninox.sys.ini</language>
		</languages>
	</administration>
</extension>